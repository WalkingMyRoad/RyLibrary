<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <RelativeLayout
        android:id="@+id/frame_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--头部栏-->
        <LinearLayout
            android:id="@+id/frame_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:orientation="vertical"
            android:visibility="gone">
            <android.support.v7.widget.Toolbar
                android:id="@+id/main_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                app:popupTheme="@style/AppTheme.AppBarOverlay"
                app:theme="@style/MyCustomToolBarStyle">
                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:lines="1"
                    android:text=""
                    android:textSize="18sp"/>
            </android.support.v7.widget.Toolbar>
        </LinearLayout>
        <TextView
            android:id="@+id/nopage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/no_page"
            android:textColor="@android:color/black"
            android:textSize="@dimen/btn_txt_size_small"
            android:visibility="gone"/>
        <LinearLayout
            android:id="@+id/frame_footer_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <!--底部的按钮栏-->
            <LinearLayout
                android:id="@+id/frame_footer_button"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">
            </LinearLayout>
            <!--底部栏 额外扩充-->
            <LinearLayout
                android:id="@+id/frame_footer"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:visibility="gone">

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>




</FrameLayout>