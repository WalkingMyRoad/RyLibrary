<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <RelativeLayout
        android:id="@+id/frame_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--头部栏-->
        <LinearLayout
            android:id="@+id/frame_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:orientation="vertical"
            android:visibility="gone">
            <android.support.v7.widget.Toolbar
                android:id="@+id/main_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                app:popupTheme="@style/AppTheme.AppBarOverlay"
                app:theme="@style/MyCustomToolBarStyle">
                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:lines="1"
                    android:text=""
                    android:textSize="18sp"/>
            </android.support.v7.widget.Toolbar>
        </LinearLayout>
        <TextView
            android:id="@+id/nopage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/no_page"
            android:textColor="@android:color/black"
            android:textSize="@dimen/btn_txt_size_small"
            android:visibility="gone"/>
        <LinearLayout
            android:id="@+id/frame_footer_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <!--底部的按钮栏-->
            <LinearLayout
                android:id="@+id/frame_footer_button"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">
            </LinearLayout>
            <!--底部栏 额外扩充-->

            <LinearLayout
                android:id="@+id/frame_footer"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
               android:visibility="gone"
                >

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/voice_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/volume_icon"
        android:layout_marginTop="10dip"
        android:layout_gravity="bottom"
        android:layout_marginLeft="20dp"/>
    <LinearLayout
        android:id="@+id/seek_liner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/volume_add"
            android:layout_marginBottom="8dip"/>

        <com.ist.rylibrary.base.ui.VerticalSeekBar
            android:id="@+id/voice_seekbar"
            android:layout_width="wrap_content"
            android:layout_height="250dip"
            android:progressDrawable="@drawable/progress_vertica"
            android:thumb="@drawable/handle"
            android:maxWidth="20dip"
            android:minWidth="20dip"
            android:alpha="0.7"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/volume_del"
            android:layout_marginTop="8dip"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/electricity"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="3dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/electricity100"
            android:layout_gravity="center"
            android:id="@+id/txt_elec"
            android:text="100%"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textSize="@dimen/txt_size_18"

            />
    </RelativeLayout>


</FrameLayout>