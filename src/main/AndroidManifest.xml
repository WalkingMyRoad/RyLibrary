<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.ist.rylibrary"
          android:anyDensity="true"
          android:sharedUserId="android.uid.system">

    <!-- SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!-- SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <!--允许程序改变网络连接状态-->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <!--允许程序改变Wi-Fi连接状态-->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <!--获取网络信息状态，如当前的网络连接是否有效-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!--获取当前WiFi接入的状态以及WLAN热点的信息-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!--访问网络连接，可能产生GPRS流量-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!--改变WiFi多播状态-->
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE"/>
    <!--获取android运行中的线程-->
    <uses-permission android:name="android.permission.GET_TASKS"/>
    <!--系统悬浮窗-->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <!--允许程序录制音频-->
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <!--允许读取唯一标识符-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <uses-permission android:name="android.permission.WRITE_APN_SETTINGS"/>

    <uses-permission android:name="android.permission.BLUETOOTH"/>

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>

    <uses-permission android:name="android.permission.CAMERA"/>

    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>
    <uses-feature android:name="android.hardware.camera.flash"/>


    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity
            android:name=".base.module.BaseVideoViewActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|mcc|mnc|locale|touchscreen"
            android:theme="@style/thems">
        </activity>

        <service
            android:name="com.ist.rylibrary.base.service.NetWorkServer"
            android:launchMode="singleTask">
            <action android:name="networkserver"/>
            <!-- 系统启动完成后会调用 -->
            <action android:name="android.intent.action.BOOT_COMPLETED"/>
            <!--网络变化监听-->
            <action android:name="android.net.conn.CONNECTIVITY_CHANGE"/>
        </service>
        <service android:name=".base.service.InfraredService">
        </service>
        <service android:name=".myfloatwindow.service.FloatWindowService">

        </service>
        <service android:name=".base.service.AiuiService"/>
        <service android:name=".base.service.ChassisService"/>
        <service android:name=".base.service.WebSocketService"/>
        <service android:name=".base.service.PhoneSocketService"/>

        <receiver
            android:name=".base.boardcast.BaseBoardCast"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="star_send"/>
                <action android:name="com.wewins.facedetect.notify"/>
            </intent-filter>
        </receiver>
        <service android:name=".face.activity.FloatCamera">
        </service>

        <receiver android:name=".face.services.DetectReceiver">
            <intent-filter>
                <action android:name="com.wewins.facedetect.services"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>
